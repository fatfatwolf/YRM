    <declare-styleable name="TitleBar">
        <attr name="backgroundcolor" format="color" />
        <attr name="titlebar_back_title" format="string" />
        <attr name="titlebar_back_title_fontsize" format="dimension" />
        <attr name="titlebar_back_title_fontcolor" format="color" />
        <attr name="tv_right_content" format="string" />
