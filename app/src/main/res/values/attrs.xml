        <attr name="right_image_height" format="dimension" />
        <attr name="right_image_src2" format="reference" />
        <attr name="right_image_with2" format="dimension" />
        <attr name="right_image_height2" format="dimension" />
        <attr name="title_back_name" format="string"/>
    </declare-styleable>

    <declare-styleable name="PhotoTypeList">
        <attr name="titleArray" format="reference" />
    </declare-styleable>

