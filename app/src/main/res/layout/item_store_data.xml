<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

  <LinearLayout
      android:id="@+id/ll_shop_name"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="158px"
        android:layout_height="50px"
        android:maxLines="2"
        android:gravity="center"
        android:paddingLeft="18px"
        android:paddingRight="18px"
        android:textColor="@color/text_color"
        android:textSize="13px"
        />
    
    <View
        android:layout_width="1px"
        android:background="#F2F3F8"
        android:layout_height="match_parent"/>

    
    <LinearLayout
        android:layout_width="100px"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="50px">

      <TextView
          android:id="@+id/tv_order_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14px"
          android:textColor="#515E81"
          android:text="80"
          />
      <TextView
          android:id="@+id/tv_refund_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="10px"
          android:textColor="#515E81"
          android:text="含退款数:1"
          />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:background="#F2F3F8"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="50px">

      <TextView
          android:id="@+id/tv_order_sum"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14px"
          android:textColor="#515E81"
          android:text="1200"
          />
      <TextView
          android:id="@+id/tv_refund_order"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="10px"
          android:textColor="#515E81"
          android:text="含退款数:20"
          />
    </LinearLayout>
  </LinearLayout>


</LinearLayout>