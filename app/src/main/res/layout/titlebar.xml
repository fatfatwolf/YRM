<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mpos_titlebar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/main_color2">

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:gravity="center"
        android:text="right"
        android:textColor="@color/white"
        android:textSize="15px"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_titlebar_back_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="17px"/>

    <RelativeLayout
        android:id="@+id/ll_title_image"
        android:layout_width="60dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/iv_question"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:clickable="true"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:background="@drawable/img_question"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/title_image"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:clickable="true"
            android:layout_marginRight="13dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:background="@drawable/add_right"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_titlebar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:src="@drawable/img_lmf_back"/>

        <TextView
            android:id="@+id/back_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
