<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_f8"
    tools:context=".payment.activity.SetMinAccountActivity">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="设置最低收款金额"
        >
    </com.hybunion.yirongma.payment.view.TitleBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最低收款金额(元)"
        android:textSize="14px"
        android:layout_marginTop="14px"
        android:layout_marginLeft="13px"
        android:textColor="@color/text_color2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="14px"
        android:layout_marginBottom="20px"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_fuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:gravity="center_vertical"
            android:text="¥"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15px"
            />

        <EditText
            android:id="@+id/et_min_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_fuhao"
            android:layout_marginLeft="35px"
            android:layout_centerVertical="true"
            android:background="@null"
            android:maxLength="4"
            android:inputType="number|numberDecimal"
            android:hint="未设置，请输入最低金额"
            android:textColorHint="#CBD0DE"
            android:textSize="20px" />
        <TextView
            android:id="@+id/tv_cancel_min_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消最低金额"
            android:textSize="13px"
            android:layout_centerVertical="true"
            android:textColor="#CBD0DE"
            android:layout_marginRight="18px"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_min_amount_sure"
        style="@style/btn_style"
        android:textSize="17px"
        android:text="确认"
        />
</LinearLayout>