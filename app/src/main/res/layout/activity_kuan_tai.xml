<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_kuantai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_f8"
    tools:context=".payment.activity.KuanTaiActivity">

    <include layout="@layout/head"></include>
    <LinearLayout
        android:id="@+id/rl_billing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_20"
            android:background="@drawable/lmf_billing_da_search2"
            android:hint="输入款台名称"
            android:textSize="12sp"
            android:drawableLeft="@drawable/img_lmf_search"
            android:gravity="center_vertical"
            android:textColor="@color/text_color2"
            android:textColorHint="@color/lighter_gray2"
            />
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:layout_marginLeft="@dimen/space_20"
            android:textColor="@color/text_color2"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefresh_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_20"
            ></ListView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:id="@+id/ll_gone_clerk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:background="@drawable/kuantai_nodata"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="61dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂未绑定任何款台"
            android:textColor="@color/lighter_gray2"
            android:gravity="center_horizontal"
            android:layout_marginTop="28dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_new_kuantai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_back_color1"
        android:textColor="@color/white"
        android:text="新增款台"
        />
</LinearLayout>