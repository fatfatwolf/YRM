<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="忘记密码">

    </com.hybunion.yirongma.payment.view.TitleBar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_marginLeft="43px"
        android:layout_marginTop="40px"
        android:textSize="15px"
        android:text="忘记登录密码?"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18px"
        android:layout_marginTop="8px"
        android:layout_marginLeft="43px"
        android:text="请输入要找回账号"
        android:textColor="#130000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="43px"
        android:layout_marginRight="30dp"
        android:layout_marginTop="36px"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtPhoneNum_forget_pwd_activity"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="number"
            android:textSize="15px"
            android:textColor="@color/text_color2"
            android:layout_marginBottom="8px"
            android:hint="请输入手机号"
            android:textColorHint="@color/edt_hint_color"
            />

    </LinearLayout>
    <View
        android:id="@+id/line_find_password_activity"
        style="@style/view_horizontal_line"
        android:layout_marginLeft="43px"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/tvNotice_forget_pwd_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13px"
        android:text=""
        android:textColor="@color/btn_back_color1"
        android:layout_marginLeft="43px"
        android:layout_marginTop="4px"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tvNext_forget_pwd_activity"
        android:layout_width="288px"
        android:layout_height="44px"
        app:layout_auto_basewidth="height"
        android:layout_marginTop="99px"
        android:background="@drawable/background_corner3"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="下一步：身份验证"
        android:textColor="#FFFFFF"
        android:textSize="17px" />
</LinearLayout>