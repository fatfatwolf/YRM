<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">

    <ImageView
        android:id="@+id/img_close_notice_dialog"
        android:layout_width="50px"
        android:layout_height="50px"
        app:layout_auto_basewidth="height"
        android:src="@drawable/close2"
        android:padding="14px"
        android:layout_alignParentRight="true" />
    
    <TextView
        android:id="@+id/tv_account_notice_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启提示"
        android:textSize="17px"
        android:textColor="@color/text_color2"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="60px" />

    <TextView
        android:id="@+id/tv_content_notice_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_auto_basewidth="height"
        android:text="开启「订单实时刷新」后无需手动操作，订单信息可实时显示在订单列表中"
        android:textColor="@color/text_color"
        android:layout_marginTop="20px"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:lineSpacingExtra="5px"
        android:textSize="15px"
        android:layout_marginBottom="30px"
        android:layout_below="@+id/tv_account_notice_dialog" />

    <TextView
        android:id="@+id/ok_button_notice_dialog"
        android:layout_width="250px"
        android:layout_height="44px"
        android:layout_marginBottom="46px"
        android:layout_marginTop="10px"
       android:layout_centerHorizontal="true"
        app:layout_auto_basewidth="height"
        android:text="立即开启"
        android:textColor="#fff"
        android:textSize="15px"
        android:gravity="center"
        android:background="@drawable/shape_button_my_wallet_fragment"
        android:layout_below="@+id/tv_content_notice_dialog"/>











</RelativeLayout>