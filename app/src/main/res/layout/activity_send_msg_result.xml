<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_f8"
    tools:context=".payment.activity.SendMsgResultActivity">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="推送消息结果"
        ></com.hybunion.yirongma.payment.view.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_width="70px"
        android:layout_height="70px"
        android:src="@drawable/img_send_msg_success"
        android:layout_marginTop="40px"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息发送成功"
            android:layout_marginTop="20px"
            android:textColor="#313131"
            android:textSize="21px"
            android:textStyle="bold"
            android:layout_marginBottom="70px"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25px"
        >

        <TextView
            android:id="@+id/tv_history_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18px"
            android:textColor="@color/lmf_main_color"
            android:layout_marginLeft="10px"
            android:background="@drawable/radius1_red_textview"
            android:text="查看历史消息"
            />
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:textSize="18px"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/radius1_red_button"
            android:text="返回会员页"
            />


    </LinearLayout>
</LinearLayout>