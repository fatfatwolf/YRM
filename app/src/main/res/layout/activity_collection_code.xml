<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/line_color"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:id="@+id/tb_my_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="@string/collection_code_detail" />

    <View
        style="@style/view_horizontal"
        android:layout_marginTop="10dp" />

    <View style="@style/view_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款码名称："
                android:textColor="@color/text_level_one"
                android:textSize="@dimen/text_level_1" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_level_two"
                android:textSize="@dimen/text_level_2" />

        </RelativeLayout>

        <View style="@style/view_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号"
                android:textColor="@color/text_level_one"
                android:textSize="@dimen/text_level_1" />

            <TextView
                android:id="@+id/tv_serial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_level_two"
                android:textSize="@dimen/text_level_2" />

        </RelativeLayout>

        <View style="@style/view_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所属门店："
                android:textColor="@color/text_level_one"
                android:textSize="@dimen/text_level_1" />

            <TextView
                android:id="@+id/tv_stores_owned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_level_two"
                android:textSize="@dimen/text_level_2" />

        </RelativeLayout>

        <View style="@style/view_horizontal" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_isReward"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫码设备"
                    android:layout_weight="1"
                    android:padding="@dimen/space10"
                    />
                <TextView
                    android:id="@+id/tv_scan_equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="@dimen/space10"
                    />
            </LinearLayout>
                <View style="@style/view_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备名称"
                        android:layout_weight="1"
                        android:padding="@dimen/space10"
                        />
                    <TextView
                        android:id="@+id/tv_equip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aaa"
                        android:padding="@dimen/space10"
                        />
                </LinearLayout>
                <View style="@style/view_horizontal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/N号"
                        android:layout_weight="1"
                        android:padding="@dimen/space10"
                        />
                    <TextView
                        android:id="@+id/tv_sn_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aaa"
                        android:padding="@dimen/space10"
                        />
                </LinearLayout>
                <View style="@style/view_horizontal" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备非接状态"
                        android:layout_weight="1"
                        android:padding="@dimen/space10"
                        />
                    <TextView
                        android:id="@+id/tv_isDocking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aaa"
                        android:padding="@dimen/space10"
                        />
                </LinearLayout>
                <View style="@style/view_horizontal" />
                <LinearLayout
                    android:id="@+id/ll_skip_reward"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备奖励"
                        android:layout_weight="1"
                        android:padding="@dimen/space10"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_size_12"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>
                <View style="@style/view_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_save_code"
                android:layout_width="253dp"
                android:layout_marginTop="5dp"
                android:layout_height="310dp"
                android:background="@drawable/img_qr_code"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_collection_qr_code"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="@dimen/height_qr_code" />

                <TextView
                    android:id="@+id/tv_code_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_level_one"
                    android:textSize="8sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_save_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="20dp"
                android:background="@drawable/shape_button_no"
                android:text="@string/save_photo"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>