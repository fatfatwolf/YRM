<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mpos_titlebar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/lmf_main_color">

        <TextView
            android:id="@+id/tv_titlebar_back_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="17px"
            android:text="结果详情"/>


        <LinearLayout
            android:id="@+id/ll_titlebar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:src="@drawable/img_lmf_back"/>/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tixianAmt_result_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33px"
        android:text="¥ 0.00"
        android:textColor="@color/text_color2"
        android:textSize="30px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:text="提现申请成功，具体到账时间以开户行为准"
        android:textColor="@color/blue_color2"
        android:textSize="13px" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:text="服务费"
            android:textColor="@color/text_color"
            android:textSize="13px" />

        <TextView
            android:id="@+id/tvFuWuFei_tixian_result_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:textColor="@color/text_color"
            android:layout_marginRight="13px"
            android:textSize="13px"
            tools:text="13.00元" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tvFuWuFei_tixian_result_activity"
            android:layout_marginLeft="13px"
            android:layout_marginRight="13px"
            android:background="@color/line_color1" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:text="提现类型"
            android:textColor="@color/text_color"
            android:textSize="13px" />

        <TextView
            android:id="@+id/tv_tixianType_tixian_result_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:textColor="@color/text_color"
            android:layout_marginRight="13px"
            android:textSize="13px"
            tools:text="实时到账" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:text="提现到"
            android:textColor="@color/text_color"
            android:textSize="13px" />

        <TextView
            android:id="@+id/tv_bankName_tixian_result_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:textColor="@color/text_color"
            android:textSize="13px"
            android:layout_marginRight="13px"
            tools:text="中国建设银行 (1786)" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:text="提现时间"
            android:textColor="@color/text_color"
            android:textSize="13px" />

        <TextView
            android:id="@+id/tv_time_tixian_result_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:textColor="@color/text_color"
            android:textSize="13px"
            android:layout_marginRight="13px"
            tools:text="2018-12-11 16:24" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:text="订单编号"
            android:textColor="@color/text_color"
            android:textSize="13px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="13px"
            android:textColor="@color/text_color"
            android:textSize="13px"
            android:layout_marginRight="13px"
            tools:text="2984783468273647521" />


    </RelativeLayout>


    <TextView
        android:id="@+id/finish_tixian_result_activity"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="84px"
        android:layout_marginBottom="81px"
        android:background="@drawable/shape_tixian_button_red"
        android:gravity="center"
        android:text="完成"
        android:textColor="#fff"
        android:textSize="17px"
        app:layout_auto_basewidth="height" />


</LinearLayout>