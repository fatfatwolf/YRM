<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        app:layout_auto_basewidth="height">

        <ImageView
            android:id="@+id/img_czk_type"
            android:layout_width="25px"
            android:layout_height="25px"
            app:layout_auto_basewidth="height"
            android:layout_marginLeft="15px"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_czk_type"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_czk_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款中"
                    android:textSize="13px"
                    android:textColor="@color/text_color2"/>

                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2536"
                    android:textColor="@color/text_color2"
                    android:textSize="13px"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_czk_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:32:36"
                    android:textSize="11px"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/tv_vc_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    tools:text="储值卡尾号"
                    android:textSize="11px"
                    android:textColor="@color/text_color"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15px"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_czk_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginTop="8px"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="0.01"
                android:textColor="@color/text_color2"
                android:textSize="14px"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 3.00"
                android:textColor="@color/main_color2"
                android:textSize="12px"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_weight="1"

                />


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f2f3f8"
        app:layout_auto_basewidth="height" />
</LinearLayout>