<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="13px"
        android:layout_marginRight="13px"
        android:background="@drawable/background_corner_popwindow">
        
        <TextView
            android:id="@+id/storeName_my_bottom_dialog"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text=""
            android:textSize="14px"
            android:textColor="@color/text_color2"
            android:gravity="center"
            app:layout_auto_basewidth="height"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_f8"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"/>

        <ListView
            android:id="@+id/listView_my_bottom_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </ListView>

    </LinearLayout>

    <TextView
        android:id="@+id/cancel_my_bottom_dialog"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:text="取消"
        android:textSize="15px"
        android:textColor="@color/blue_color2"
        android:gravity="center"
        app:layout_auto_basewidth="height"
        android:layout_marginTop="15px"
        android:layout_marginLeft="13px"
        android:layout_marginRight="13px"
        android:layout_marginBottom="16px"
        android:background="@drawable/background_corner_popwindow"/>


</LinearLayout>