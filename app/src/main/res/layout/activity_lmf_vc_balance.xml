<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
    android:id="@+id/rl_billing_title"
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical"
    android:background="@color/main_color2"
    >
    <LinearLayout
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:background="@drawable/img_lmf_back"
            android:contentDescription="@string/image"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_search"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/lmf_billing_da_search"
        android:hint="会员ID/手机号"
        android:textSize="12sp"
        android:inputType="number"
        android:drawableLeft="@drawable/img_lmf_search"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />
    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="查询"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hybunion.yirongma.common.view.MySwipe
            android:id="@+id/lv_query_vc_balance_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lv_va_balance_flow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:headerDividersEnabled="true" />

        </com.hybunion.yirongma.common.view.MySwipe>
        <TextView
            android:id="@+id/tv_consume_record_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_data"
            android:textColor="#DCDCDC"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>