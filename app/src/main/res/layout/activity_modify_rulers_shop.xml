<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_f8"
    tools:context=".payment.activity.ModifyRulersShopActivity">
    <com.hybunion.yirongma.payment.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="充值规则"
        ></com.hybunion.yirongma.payment.view.TitleBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="2px"
            android:layout_height="15px"
            app:layout_auto_basewidth = "height"
            android:layout_marginLeft="15px"
            android:background="@drawable/background_corner"
            android:textSize="@dimen/text_level_1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6px"
            android:text="充值规则"
            android:textStyle="bold"
            android:textColor="@color/text_313131"
            android:textSize="22px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15px"
        android:layout_marginLeft="15px"
        android:background="@color/bg_f8"
        />

        <com.hybunion.yirongma.payment.view.CustomGridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:numColumns="2"
            android:listSelector="@null"
            android:layout_marginRight="15px"
            android:horizontalSpacing="15px"
            android:verticalSpacing="10px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15px"
            ></com.hybunion.yirongma.payment.view.CustomGridView>
        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_marginTop="5px"
            app:layout_auto_basewidth = "height"
            android:background="@color/green_white"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="2px"
                android:layout_height="15px"
                app:layout_auto_basewidth = "height"
                android:layout_marginLeft="15px"
                android:background="@drawable/background_corner"
                android:textSize="@dimen/text_level_1"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6px"
                android:text="其它设置"
                android:textStyle="bold"
                android:textColor="@color/text_313131"
                android:textSize="22px"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_auto_basewidth = "height"
            android:background="@color/gray_e1e1e1"
            android:layout_marginTop="5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="配置收款码充值弹窗"
                android:gravity="center"
                android:layout_marginLeft="15px"
                android:textSize="16px"
                android:textColor="@color/text_313131"
                />
            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12px"
                android:layout_marginLeft="10px"
                android:gravity="right"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="所有顾客弹窗引导"
                android:layout_weight="1"
                android:layout_marginRight="9px"
                android:textColor="@color/text_313131"
                />
            <ImageView
                android:layout_width="7px"
                android:layout_height="10px"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_marginRight="18px"
                android:background="@drawable/right_arrow"
                />
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            app:layout_auto_basewidth = "height"
            android:background="@color/gray_e1e1e1"
            android:layout_marginTop="5px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            />
        <LinearLayout
            android:id="@+id/ll_can_borrow"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:visibility="gone"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="允许他人借用"
                android:gravity="center"
                android:layout_marginLeft="15px"
                android:textSize="15px"
                android:textColor="@color/text_313131"
                />
            <RelativeLayout
                android:id="@+id/rv_others_bollow"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="8px"
                >
                <ImageView
                    android:layout_width="14px"
                    android:layout_height="14px"
                    android:src="@drawable/img_hui_zhushi"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_ruler_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12px"
                android:layout_marginLeft="10px"
                android:gravity="right"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:text="不限次"
                android:layout_weight="1"
                android:layout_marginRight="9px"
                android:textColor="@color/text_313131"
                />
            <ImageView
                android:layout_width="7px"
                android:layout_height="10px"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_marginRight="18px"
                android:background="@drawable/right_arrow"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>