<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="设置密码">

    </com.hybunion.yirongma.payment.view.TitleBar>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_marginLeft="38px"
        android:layout_marginTop="30px"
        android:textSize="15px"
        android:text="身份验证成功"
        />
    <TextView
        android:text="请设置登录密码"
        android:textSize="18px"
        android:layout_marginTop="8px"
        android:layout_marginLeft="38px"
        android:textColor="#130000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="13px"
        android:layout_marginLeft="52px"
        android:text="众维码账号"
        />
    <TextView
        android:id="@+id/tv_loginName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52px"
        android:layout_marginTop="8px"
        />
    <View
        style="@style/view_horizontal_line"
        android:layout_marginLeft="45px"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13px"
        android:layout_marginTop="25px"
        android:layout_marginLeft="52px"
        android:text="密码"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="52px"
        android:layout_marginRight="48px"
        android:orientation="horizontal"
        android:layout_marginTop="8px"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtPwd_reset_pwd_activity"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="textPassword"
            android:textSize="15px"
            android:layout_marginBottom="5dp"
            android:hint="设置密码"
            android:text=""
            android:maxLength="18"
            />
        <ImageView
            android:id="@+id/imgEye_reset_pwd_activity"
            android:layout_gravity="center"
            android:src="@drawable/clearlog"
            android:layout_marginBottom="5dp"
            android:layout_width="40px"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        style="@style/view_horizontal_line"
        android:layout_marginLeft="45px"
        android:layout_marginRight="30dp"
        android:layout_marginTop="3px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52px"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="@color/edt_hint_color"
        android:text="请输入6-18位字符、数字或符号"
        />

    <TextView
        android:id="@+id/ok_reset_pwd_activity"
        android:layout_width="288px"
        android:layout_height="44px"
        app:layout_auto_basewidth="height"
        android:layout_marginTop="28px"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/background_corner3"
        android:text="确认修改"
        android:textColor="#FFFFFF"
        android:textSize="17px" />
</LinearLayout>