<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_title_check_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38px"
                android:textColor="@color/text_color2"
                android:textSize="17px"
                android:text="停止检测"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_content_check_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                android:text="停止后将无法全面检测语音系统设置"
                android:textColor="@color/text_color2"
                android:textSize="14px"
                android:layout_below="@+id/tv_title_check_dialog"
                android:layout_marginBottom="35px"
                />


        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#f4f4f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_check_dialog"
                android:layout_width="0dp"
                android:layout_height="40px"
                android:layout_weight="1"
                app:layout_auto_basewidth="height"
                android:textColor="@color/text_color2"
                android:textSize="15px"
                android:background="#fff"
                android:text="取消"
                android:gravity="center"/>

            <View
                android:layout_width="1dp"
                android:layout_height="40px"
                android:background="#f4f4f4" />

            <TextView
                android:id="@+id/tv_ok_check_dialog"
                android:layout_width="0dp"
                android:layout_height="40px"
                app:layout_auto_basewidth="height"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="15px"
                android:background="#f74948"
                android:text="确定"
                android:gravity="center"/>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>