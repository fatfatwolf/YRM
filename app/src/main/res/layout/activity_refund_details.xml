<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:id="@+id/ll_normal_trade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="33px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="30px"
                android:textColor="@color/text_level_one"
                />

            <TextView
                android:id="@+id/tv_transAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_level_one"
                android:textSize="30px" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_refund_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13px"
            android:textColor="@color/text_color2"
            android:layout_marginBottom="20px"
            />


        <LinearLayout
            android:id="@+id/refund_time_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款时间"
                android:textColor="@color/text_level_two"
                android:textSize="13px" />

            <TextView
                android:id="@+id/tv_refund_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_level_one"
                android:textSize="13px" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/refund_no_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款单号"
                android:textColor="@color/text_level_two"
                android:textSize="13px" />

            <TextView
                android:id="@+id/tv_refund_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_level_one"
                android:textSize="13px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10px"
            >

            <TextView
                android:id="@+id/tv_actual_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额"
                android:textColor="@color/text_level_two"
                android:textSize="13px" />

            <TextView
                android:id="@+id/tv_order_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_level_one"
                android:textSize="13px"
                android:text="0.00"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/youhuiParent_refund_details_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券减免"
                android:textColor="@color/main_color2"
                android:textSize="13px" />

            <TextView
                android:id="@+id/tv_youhui_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="- 0.00"
                android:textColor="@color/main_color2"
                android:textSize="13px" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorGray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款时间"
                android:textColor="@color/text_level_two"
                android:textSize="13px" />

            <TextView
                android:id="@+id/tv_trader_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_level_one"
                android:textSize="13px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/store_parent_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费门店"
                android:textColor="@color/text_level_two"
                android:textSize="13px" />

            <TextView
                android:id="@+id/tv_store_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_level_one"
                android:textSize="13px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="@color/text_level_two"
                android:textSize="13px" />

            <TextView
                android:id="@+id/tv_mode_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_level_one"
                android:textSize="13px" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tid_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款码编号"
                android:textColor="@color/text_level_two"
                android:textSize="13px" />

            <TextView
                android:id="@+id/tv_collect_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_level_one"
                android:textSize="13px" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号"
                android:textColor="@color/text_level_two"
                android:textSize="13px" />

            <TextView
                android:id="@+id/tv_trader_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_level_one"
                android:textSize="13px" />

        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_remark"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15px"
        android:visibility="gone"
        android:background="@color/white"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:layout_marginTop="10px"
            android:layout_marginLeft="15px"
            android:textSize="13px"
            android:textColor="@color/text_color"
            />
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言zdsdsadsafd"
            android:layout_marginTop="8px"
            android:layout_marginLeft="15px"
            android:layout_marginBottom="14px"
            android:textSize="13px"
            android:textColor="@color/text_color2"
            />

    </LinearLayout>

</LinearLayout>