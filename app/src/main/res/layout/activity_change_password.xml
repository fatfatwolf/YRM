<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_f8"
    tools:context=".payment.activity.ChangePasswordActivity">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="修改登录密码">

    </com.hybunion.yirongma.payment.view.TitleBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/space_5"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="旧密码"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color2"
            />

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:background="@null"
            />
        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="@color/btn_back_color1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"

        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="新密码"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color2"
            />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:hint="请输入新密码"
            android:background="@null"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save_password"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@color/lmf_main_color"
        android:text="保存"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
</LinearLayout>