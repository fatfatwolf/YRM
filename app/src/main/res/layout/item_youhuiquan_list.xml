<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="310px"
        android:layout_height="170px"
        app:layout_auto_basewidth="height"
        android:background="@drawable/item_bg_youhuiquan"
        android:layout_marginTop="15px"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_title_item_youhuiquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="春日乐翻天"
            android:textSize="14px"
            android:textColor="@color/text_color2"
            android:layout_marginTop="10px"
            android:layout_marginLeft="14px"/>


        <ImageView
            android:id="@+id/img_status_item_youhuiquan"
            android:layout_width="52px"
            android:layout_height="52px"
            app:layout_auto_basewidth="height"
            android:layout_alignParentRight="true"
            tools:src="@drawable/img_online"
            android:layout_marginRight="4px"/>


        <LinearLayout
            android:id="@+id/num_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px">

            <TextView
                android:id="@+id/tv_have_num_item_youhuiquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/btn_back_color1"
                android:textSize="30px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/text_color2"
                android:textSize="20px"/>

            <TextView
                android:id="@+id/tv_sum_num_item_youhuiquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_color2"
                android:textSize="20px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 张"
                android:textColor="@color/text_color2"
                android:textSize="20px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/num_parent"
            android:layout_marginLeft="14px"
            android:layout_marginTop="15px">

            <ImageView
                android:layout_width="10px"
                android:layout_height="10px"
                app:layout_auto_basewidth="height"
                android:src="@drawable/img_loudou"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5px"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期："
                android:textColor="@color/text_color"
                android:textSize="12px"/>

            <TextView
                android:id="@+id/tv_time_item_youhuiquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2019/05/10 ~ 2019/06/10"
                android:textColor="@color/text_color"
                android:textSize="12px"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_rules_item_youhuiquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3元券，满30可用"
            android:textSize="13px"
            android:textColor="@color/text_color"
            android:layout_marginLeft="27px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17px"/>

        <TextView
            android:id="@+id/tv_quan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="下线"
            android:textSize="12px"
            android:background="@drawable/radius18_red_textview"
            android:textColor="@color/text_color"
            android:layout_marginRight="9px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17px"/>


    </RelativeLayout>






</LinearLayout>