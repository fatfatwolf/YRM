<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_table_card"
            app:layout_auto_basewidth="height"
            android:src="@drawable/img_refund"
            android:layout_marginLeft="14px"
            android:layout_marginTop="18px"
            android:layout_marginRight="9px"
            android:layout_width="25px"
            android:layout_height="25px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10px"
            android:layout_weight="1"
            android:layout_marginTop="12px"

            android:layout_marginBottom="11px"
            app:layout_auto_basewidth="height"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_refund_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款成功"
                android:textSize="14px"
                app:layout_auto_basewidth="height"
                android:textColor="@color/text_color2"
                />
            <TextView
                android:id="@+id/tv_refund_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3px"
                android:text="2018/12/25 10:26:45"
                android:textColor="@color/text_color"
                android:textSize="12px"
                app:layout_auto_basewidth="height" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3px"
            android:text="- ¥"
            android:textColor="@color/btn_back_color1"
            android:textSize="14px"
            app:layout_auto_basewidth="height" />
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3px"
            android:text="20.00"
            android:layout_marginLeft="5px"
            android:layout_marginRight="15px"
            android:textColor="@color/btn_back_color1"
            android:textSize="14px"
            app:layout_auto_basewidth="height" />
    </LinearLayout>


</LinearLayout>
