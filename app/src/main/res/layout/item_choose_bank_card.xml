<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <ImageView
        android:id="@+id/img_bank_item_choose_bank_activity"
        android:layout_width="32px"
        android:layout_height="32px"
        app:layout_auto_basewidth="height"
        android:layout_marginLeft="15px"
        android:layout_marginRight="13px"
        android:layout_marginTop="14px"
        android:layout_marginBottom="14px"
        android:layout_centerVertical="true"
        tools:src="@drawable/add"/>

    <TextView
        android:id="@+id/tv_bankName_item_choose_bank_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_bank_item_choose_bank_activity"
        tools:text="中国建设银行"
        android:layout_marginTop="10px"
        android:textSize="15px"
        android:textColor="@color/title_text_color"/>

    <TextView
        android:id="@+id/tv_bankDetail_item_choose_bank_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_bank_item_choose_bank_activity"
        tools:text="尾号 1876 储蓄卡"
        android:textSize="13px"
        android:textColor="@color/text_color"
        android:layout_below="@+id/tv_bankName_item_choose_bank_activity"
        android:layout_marginTop="2px"/>


</RelativeLayout>