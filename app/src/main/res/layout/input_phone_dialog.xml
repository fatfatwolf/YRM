<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_input_phone_background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dialog"
            android:orientation="vertical" >
                <EditText
                    android:id="@+id/metName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:inputType="number"
                    android:hint="请输入手机号码"
                    android:layout_marginTop="18dp"
                    android:maxLength="11"
                    android:background="@drawable/input_phone_bg"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="14dp" />
            <View style="@style/view_horizontal_line"
                android:layout_marginTop="18dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                    <Button
                        android:id="@+id/submit_no"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/select_sub_hw"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="取消"
                        android:textColor="#8f333333"
                        android:textSize="15dp" />
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:background="@color/line_color"
                    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false" >

                    <Button
                        android:id="@+id/submit_ok"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/select_sub_right"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="确定"
                        android:textColor="@color/red"
                        android:textSize="15dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>