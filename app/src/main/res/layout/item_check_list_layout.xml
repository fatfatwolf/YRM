<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="18px"
        android:layout_height="18px"
        android:src="@drawable/img_check_problem"
        android:layout_marginLeft="19px"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_check_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备已开启省电模式"
        android:textSize="13px"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8px"
        android:layout_toRightOf="@+id/img_check"
        />

    <TextView
        android:id="@+id/tv_go_to_trim"
        android:layout_width="56px"
        android:layout_height="20px"
        app:layout_auto_basewidth="height"
        android:text="去调整"
        android:textSize="14px"
        android:background="@drawable/shape_check_go_to_trim"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19px"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginBottom="12px"
        />


</com.zhy.autolayout.AutoRelativeLayout>