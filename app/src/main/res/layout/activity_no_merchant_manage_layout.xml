<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="商户管理密码">

    </com.hybunion.yirongma.payment.view.TitleBar>

    <ImageView
        android:layout_width="210px"
        android:layout_height="220px"
        app:layout_auto_basewidth="height"
        android:src="@drawable/icon_no_merchant_pwd"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂未设置商户管理密码"
        android:layout_marginTop="35px"
        android:textSize="14px"
        android:textColor="#b6bdd0"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:id="@+id/setup_pwd_no_merchant_manage_activity"
        android:layout_width="345px"
        android:layout_height="44px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_tixian_button_red"
        android:text="立即设置"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="17px"
        android:layout_marginTop="130px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商户管理密码将用于退款操作使用"
        android:textColor="#b6bdd0"
        android:textSize="13px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17px"
        />




</LinearLayout>