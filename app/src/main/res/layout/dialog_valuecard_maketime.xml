<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#00f0f0f0"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="300dp"
        android:background="@drawable/bg_border_round"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgv_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_delete"/>

        <TextView
            android:id="@+id/tv_dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="title"
            android:textColor="@color/textColor_0"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/lin_time"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_below="@id/tv_dialogTitle"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">


            <com.hybunion.yirongma.valuecard.timepicker.LoopView
                android:id="@+id/loopView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>

            <com.hybunion.yirongma.valuecard.timepicker.LoopView
                android:id="@+id/loopView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.hybunion.yirongma.valuecard.timepicker.LoopView
                android:id="@+id/loopView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_dialogbtn1"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@id/lin_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_dialog_white"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/main_body_color"
            android:textSize="15sp"/>

    </RelativeLayout>

</LinearLayout>