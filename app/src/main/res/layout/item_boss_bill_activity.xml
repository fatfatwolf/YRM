<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39px"
        app:layout_auto_basewidth="height"
        android:background="#fff">

        <View
            android:id="@+id/view_item_boss_bill"
            android:layout_width="3px"
            android:layout_height="15px"
            app:layout_auto_basewidth="height"
            android:background="@drawable/shape_item_boss_bill_activity"
            android:layout_marginLeft="14px"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tvStoreName_item_boss_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小糖豆 - 金源店"
            android:layout_toRightOf="@+id/view_item_boss_bill"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:textColor="@color/text_color2"
            android:textSize="14px"/>
        
        <ImageView
            android:layout_width="15px"
            android:layout_height="15px"
            app:layout_auto_basewidth="height"
            android:src="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17px"
            />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_auto_basewidth="height"
        android:background="#f2f3f8"
        android:layout_marginLeft="15px"
        android:layout_marginRight="14px"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        app:layout_auto_basewidth="height"
        android:background="#fff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易数据："
                android:textColor="@color/text_color"
                android:textSize="14px"
                />

            <TextView
                android:id="@+id/tvMoney_item_boss_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 6689.22 "
                android:textColor="@color/text_color2"
                android:textSize="14px"/>
            
            <View
                android:layout_width="2px"
                android:layout_height="12px"
                app:layout_auto_basewidth="height"
                android:background="#f2f3f8"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"/>


            <TextView
                android:id="@+id/tvNum_item_boss_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56 笔"
                android:textColor="@color/text_color2"
                android:textSize="14px"/>


        </LinearLayout>

    </RelativeLayout>




</LinearLayout>