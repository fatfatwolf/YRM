<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_f8"
    tools:context=".payment.activity.NoUseTimeActivity">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="不可用时间"
        app:tv_right_content="添加时间段"
        ></com.hybunion.yirongma.payment.view.TitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/tv_no_time1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不可用时间段1"
        android:textSize="14px"
        android:visibility="gone"
        android:textColor="@color/blue_color2"
        android:layout_marginLeft="14px"
        android:layout_marginBottom="4px"
        android:layout_marginTop="8px"
        />
        <TextView
            android:id="@+id/tv_no_use_time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="15px"
            android:text=""
            android:textSize="14px"
            android:visibility="gone"
            android:paddingTop="11px"
            android:paddingBottom="11px"

            app:layout_auto_basewidth="height"
            />
        <TextView
            android:id="@+id/tv_no_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="不可用时间段1"
            android:layout_marginTop="20px"
            android:textSize="14px"
            android:textColor="@color/blue_color2"
            android:layout_marginLeft="14px"
            android:layout_marginBottom="4px"

            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="17px"
        android:background="@color/white"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每周不可用日期"
        android:textSize="14px"
        android:textColor="@color/text_color2"
        android:layout_marginLeft="18px"
        android:layout_marginTop="14px"
        />

        <GridView
            android:id="@+id/gridView_day"
            android:layout_width="match_parent"
            android:listSelector="@null"
            android:numColumns="3"
            android:scrollbars="none"
            android:horizontalSpacing="14px"
            android:verticalSpacing="17px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="18px"
            android:layout_marginTop="12px"
            android:layout_marginRight="17px"
            android:layout_height="150px"></GridView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_f8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="180px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在上述日期的以下时间段不可用"
            android:textSize="14px"
            android:textColor="@color/text_color2"
            android:layout_marginLeft="18px"
            android:layout_marginTop="14px"
            />
        <GridView
            android:id="@+id/gridView_time"
            android:layout_width="match_parent"
            android:listSelector="@null"
            android:numColumns="3"
            android:horizontalSpacing="14px"
            android:scrollbars="none"
            android:verticalSpacing="17px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="18px"
            android:layout_marginTop="12px"
            android:layout_marginRight="17px"
            android:layout_height="120px"></GridView>
    </LinearLayout>
        <TextView
            android:id="@+id/tv_no_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="不可用时间段2"
            android:textSize="14px"
            android:visibility="gone"
            android:textColor="@color/blue_color2"
            android:layout_marginLeft="14px"
            android:layout_marginBottom="4px"
            android:layout_marginTop="8px"
            />
        <TextView
            android:id="@+id/tv_no_use_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="15px"
            android:visibility="gone"
            android:text=""
            android:textSize="14px"
            android:paddingTop="11px"
            android:paddingBottom="11px"
            app:layout_auto_basewidth="height"
            />
    <Button
        android:id="@+id/bt_save"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:textSize="17px"
        android:textColor="@color/white"
        android:text="保存"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="119px"
        android:layout_marginBottom="47px"
        android:background="@drawable/radius3_gray2_button"

        />
    </LinearLayout>
    </ScrollView>
</LinearLayout>