<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".payment.activity.KuanTaiDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/lmf_main_color">

        <LinearLayout
            android:id="@+id/ll_titlebar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:src="@drawable/img_lmf_back" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:maxEms="22"
                android:singleLine="true"
                android:text="数据汇总"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_marginTop="15px"
        android:background="#fff"
        android:orientation="horizontal"
        app:layout_auto_basewidth="height">

        <TextView
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:layout_marginBottom="9px"
            android:layout_marginLeft="16px"
            android:layout_marginTop="9px"
            android:background="@drawable/shape_data_activity_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8px"
            android:text="数据汇总"
            android:textColor="#252e44"
            android:textSize="14px" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总金额"
                android:layout_gravity="center"
                android:textColor="@color/text_color2"
                android:textSize="12px"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5px"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color2"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="20px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color2"
                    android:text="元"
                    android:textSize="12px"
                    android:layout_marginLeft="3px"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="2px"
            android:layout_height="40px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/space_20"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总笔数"
                android:textColor="@color/text_color2"
                android:layout_gravity="center"
                android:textSize="12px"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_order_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color2"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="20px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color2"
                    android:text="笔"
                    android:textSize="12px"
                    android:layout_marginLeft="3px"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_data_type"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="15px"
            android:background="#fff"
            android:orientation="horizontal"
            app:layout_auto_basewidth="height">

            <TextView
                android:layout_width="4px"
                android:layout_height="match_parent"
                android:layout_marginBottom="9px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="9px"
                android:background="@drawable/shape_data_activity_title" />

            <TextView
                android:id="@+id/tv_data_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8px"
                android:text="款台数据"
                android:textColor="#252e44"
                android:textSize="14px" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingBottom="8px"
            android:paddingTop="8px"
            app:layout_auto_basewidth="height">

            <TextView
                android:id="@+id/tv_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="61px"
                android:text="款台名称"
                android:textColor="@color/text_color2"
                android:textSize="13px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单笔数（笔）"
                android:textColor="@color/text_color2"
                android:layout_marginLeft="45px"
                android:layout_toRightOf="@+id/tv_type_name"
                android:textSize="13px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15px"
                android:text="订单金额（元）"
                android:textColor="@color/text_color2"
                android:textSize="13px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#f2f3f8"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_height="1dp"/>
        <ListView
            android:id="@+id/lv_kuanTai"
            android:dividerHeight="@dimen/space_1"
            android:divider="#F2F3F8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>
</LinearLayout>