<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="公告详情" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_notice_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:text="aaa"
            android:textColor="@color/text_level_two"
            android:textSize="@dimen/text_level_2" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/text_level_two" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_notice_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:15"
                android:textColor="@color/text_level_two"
                android:textSize="@dimen/text_level_2" />

            <!--<ScrollView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->

                <TextView
                    android:id="@+id/tv_notice_item_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_notice_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:text="内容"
                    android:textColor="@color/text_level_one"
                    android:textSize="@dimen/text_level_1" />
            <!--</ScrollView>-->

        </LinearLayout>

    </LinearLayout>
</LinearLayout>