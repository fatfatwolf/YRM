<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00f0f0f0"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_round"
        android:paddingBottom="@dimen/space_20"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgv_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_delete"/>

        <TextView
            android:id="@+id/tv_dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="title"
            android:textColor="@color/textColor_0"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_dialogbtn1"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@id/tv_dialogTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:background="@drawable/btn_dialog_white"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/textColor_2"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_dialogbtn2"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@id/tv_dialogbtn1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_dialog_white"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/textColor_2"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_dialogbtn3"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@id/tv_dialogbtn2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_dialog_white"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/textColor_2"
            android:textSize="15sp"
            />

        <!--任意金额卡-->
        <TextView
            android:id="@+id/tv_dialogbtn4"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@id/tv_dialogbtn3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_dialog_white"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/textColor_2"
            android:textSize="15sp"
            />

    </RelativeLayout>

</LinearLayout>
