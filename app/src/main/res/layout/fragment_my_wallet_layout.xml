<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/mpos_titlebar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/lmf_main_color">


        <ImageView
            android:id="@+id/img_wenhao_my_wallet_layout"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:src="@drawable/img_question"
            app:layout_auto_basewidth="height"
            android:layout_toLeftOf="@+id/img_menu_my_wallet_layout"
            android:paddingTop="18px"
            android:paddingBottom="18px"
            android:paddingLeft="17px"
            />

        <ImageView
            android:id="@+id/img_menu_my_wallet_layout"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:paddingLeft="10px"
            android:paddingRight="20px"
            android:paddingBottom="18px"
            android:paddingTop="18px"
            android:src="@drawable/img_record"
            android:layout_centerVertical="true"
            app:layout_auto_basewidth="height" />


        <LinearLayout
            android:id="@+id/titlebar_back_my_wallet_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:src="@drawable/img_lmf_back" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_titlebar_back_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代理“商”计划"
            android:textColor="@android:color/white"
            android:textSize="17px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lmf_main_color">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20px"
            android:layout_marginTop="5px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3px"
                android:layout_marginTop="2px"
                android:text="余额(元)"
                android:textColor="#fff"
                android:textSize="12px" />

            <TextView
                android:id="@+id/balance_my_wallet_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="30px"
                android:text="0.00" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tixian_button_my_wallet_fragment"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="152px"
        android:background="@drawable/shape_tixian_button_gray"
        android:gravity="center"
        android:text="提现"
        android:textColor="#fff"
        android:textSize="17px"
        app:layout_auto_basewidth="height" />

    <TextView
        android:id="@+id/notice_button_my_wallet_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8px"
        android:gravity="center_horizontal"
        android:text="账户余额低于xx元，暂不支持提现"
        android:textColor="#b6bdd0"
        android:visibility="gone" />


</LinearLayout>