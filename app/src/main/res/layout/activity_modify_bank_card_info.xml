<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <com.hybunion.yirongma.payment.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titlebar_back_title="修改结算账号" />

    <include layout="@layout/view_progress" />
    <include layout="@layout/modify_message_item"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14px"
        android:layout_marginTop="10px"
        android:text="银行卡正面照片"
        android:textColor="@color/text_level_one"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_bankCard_facePic"
        android:layout_width="240dp"
        android:layout_height="200px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/bank_card_default" />

    <Button
        android:id="@+id/btn_commit_approve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/btn_bg"
        android:textColor="#fff"
        android:textSize="14px"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="80px"
        android:text="提交审核" />

</LinearLayout>