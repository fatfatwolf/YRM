<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff">

    <ImageView
        android:id="@+id/imgClose_kuantai_dialog"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/close2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="11dp"
        />


    <TextView
        android:id="@+id/nameStr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置款台名称"
        android:layout_marginTop="65dp"
        android:textSize="15sp"
        android:gravity="center_horizontal"

        />

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameStr"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="13dp"
        >

        <TextView
            android:id="@+id/nameStrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="款台名称："
            android:textSize="14dp"
            android:textColor="@color/text_color2"/>


        <EditText
            android:id="@+id/edtName_kuantai_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入款台名称"
            android:textColor="@color/text_color2"
            android:textSize="13dp"
            android:layout_toRightOf="@+id/nameStrt"
            android:maxLength="12"
            android:background="@null"
            android:layout_alignBottom="@+id/nameStrt"
            android:textColorHint="#b6bdd0"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f3f8"
            android:layout_toRightOf="@+id/nameStrt"
            android:layout_below="@+id/edtName_kuantai_dialog"
            android:layout_marginTop="3dp"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/ok_kuantai_dialog"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        />



</RelativeLayout>