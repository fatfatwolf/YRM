<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f5f5"
              android:orientation="vertical">

    <include
        layout="@layout/activity_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            layout="@layout/layout_line"/>

        <LinearLayout
            style="@style/LinValueCardActivate">

            <TextView
                style="@style/TvLeftTitle"
                android:text="卡编号"/>

            <TextView
                android:id="@+id/tv_cardNo"
                style="@style/TvRightTitle"
                android:text="000000"/>


        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            style="@style/LinValueCardActivate">

            <TextView
                style="@style/TvLeftTitle"
                android:text="卡号"/>

            <TextView
                android:id="@+id/tv_cardNumber"
                style="@style/TvRightTitle"
                android:text="8600011208819611"/>


        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            style="@style/LinValueCardActivate">

            <TextView
                style="@style/TvLeftTitle"
                android:text="卡类型"/>

            <TextView
                android:id="@+id/tv_cardType"
                style="@style/TvRightTitle"
                android:text="金额卡"/>


        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            style="@style/LinValueCardActivate">

            <TextView
                style="@style/TvLeftTitle"
                android:text="剩余金额"/>

            <TextView
                android:id="@+id/tv_cardMoney"
                style="@style/TvRightTitle"
                android:text="1000元"/>


        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            style="@style/LinValueCardActivate">

            <TextView
                style="@style/TvLeftTitle"
                android:text="激活批次"/>

            <TextView
                android:id="@+id/tv_cardBatch"
                style="@style/TvRightTitle"
                android:text="1111111"/>


        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            style="@style/LinValueCardActivate">

            <TextView
                style="@style/TvLeftTitle"
                android:text="激活时间"/>

            <TextView
                android:id="@+id/tv_cardTime"
                style="@style/TvRightTitle"
                android:text="2016-09-08"/>

        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            style="@style/LinValueCardActivate">

            <TextView
                style="@style/TvLeftTitle"
                android:text="卡状态"/>

            <TextView
                android:id="@+id/tv_cardState"
                style="@style/TvRightTitle"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_button_bg"
                android:gravity="center"
                android:text="已激活"
                android:textColor="@color/white"/>

        </LinearLayout>

        <include
            layout="@layout/layout_line"/>

    </LinearLayout>


</LinearLayout>