<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="240dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/keyboard_background2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btn_1"
                style="@style/keyboard_button_style3"
                android:text="1"/>
            <TextView
                android:id="@+id/btn_4"
                style="@style/keyboard_button_style3"
                android:text="4"/>
            <TextView
                android:id="@+id/btn_7"
                style="@style/keyboard_button_style3"
                android:text="7"/>

            <TextView
                android:id="@+id/btn_clear"
                style="@style/keyboard_button_style3"
                android:text="C"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btn_2"
                style="@style/keyboard_button_style3"
                android:text="2"/>
            <TextView
                android:id="@+id/btn_5"
                style="@style/keyboard_button_style3"
                android:text="5"/>
            <TextView
                android:id="@+id/btn_8"
                style="@style/keyboard_button_style3"
                android:text="8"/>
            <TextView
                android:id="@+id/btn_0"
                style="@style/keyboard_button_style3"
                android:text="0"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btn_3"
                style="@style/keyboard_button_style3"
                android:text="3"/>

            <TextView
                android:id="@+id/btn_6"
                style="@style/keyboard_button_style3"
                android:text="6"/>
            <TextView
                android:id="@+id/btn_9"
                style="@style/keyboard_button_style3"
                android:text="9"/>
            <TextView
                android:id="@+id/btn_dot"
                style="@style/keyboard_button_style3"
                android:text="·"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/btn_del"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="3"
                >

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="19dp"
                    android:src="@drawable/del_black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lmf_main_color"
                android:gravity="center"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确"
                    android:layout_weight="1"
                    android:textSize="20px"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:textSize="20px"
                    android:textColor="@color/white"
                    />

            </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/btn_ac"-->
        <!--style="@style/keyboard_button_style"-->
        <!--android:text="AC"/>-->



</LinearLayout>